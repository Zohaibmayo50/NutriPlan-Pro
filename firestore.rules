rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is accessing their own document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user has dietitian role
    function isDietitian(userId) {
      return isAuthenticated() 
        && isOwner(userId)
        && get(/databases/$(database)/documents/users/$(userId)).data.role == 'dietitian';
    }
    
    // Users collection
    // Users can only read and write their own profile
    match /users/{userId} {
      allow read: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated() && isOwner(userId);
      allow update: if isAuthenticated() && isOwner(userId);
      allow delete: if false; // Users cannot delete their own profile
      
      // Branding subcollection
      // Only dietitians can manage branding settings
      match /branding/{document=**} {
        allow read, write: if isDietitian(userId);
      }
      
      // Plans subcollection
      // Only dietitians can manage diet plans
      match /plans/{planId} {
        allow read, write: if isDietitian(userId);
      }
    }
    
    // Clients collection
    // Only the owning dietitian can access their clients
    match /clients/{clientId} {
      // Allow list queries if user is authenticated dietitian
      allow list: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      // Allow individual reads
      allow read: if isAuthenticated() 
        && resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      allow create: if isAuthenticated() 
        && request.resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      allow update: if isAuthenticated() 
        && resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      allow delete: if isAuthenticated() 
        && resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
    }
    
    // Diet Plans collection
    // Only the owning dietitian can access their diet plans
    match /dietPlans/{planId} {
      // Allow list queries if user is authenticated dietitian
      allow list: if isAuthenticated() 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      // Allow individual reads
      allow read: if isAuthenticated() 
        && resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      allow create: if isAuthenticated() 
        && request.resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      allow update: if isAuthenticated() 
        && resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
      allow delete: if isAuthenticated() 
        && resource.data.dietitianId == request.auth.uid
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'dietitian';
    }
    
    // AI Usage Tracking collection
    // Dietitians can read/write their own usage records
    match /aiUsage/{usageId} {
      allow read: if isAuthenticated() && usageId.matches('^' + request.auth.uid + '_.*');
      allow write: if false; // Server-side only
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
